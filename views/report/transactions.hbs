{{!-- report/transactions.hbs --}}

<section class="section dashboard">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Transactions Report</h5>
                    <form action="/report/transactions" method="post" name="transactionReport">
                        <div class="row pb-3">
                            
                            <div class="col-lg-3 col-md-6 form-group">
                                <label for="startDate">Publish Start Date:</label>
                                <input id="startDate" name="startDate" type="date" class="form-control form-control-sm" required>
                            </div>
                            <div class="col-lg-3 col-md-6 form-group">
                                <label for="endDate">Publish End Date:</label>
                                <input id="endDate" name="endDate" type="date" class="form-control form-control-sm" required>
                            </div>
                            <div class="col-lg-3 col-md-6 form-group">
                                <label for="pubStatus">Status:</label>
                                <select class="form-select form-select-sm" aria-label="Status" name="pubStatus" id="pubStatus">
                                    <option value="">All</option>
                                    <option value="Open">Open</option>
                                    <option value="Closed">Closed</option>
                                </select>
                            </div>
                            <div class="col-lg-3 col-md-6 form-group">
                                <button id="filterBtn" type="submit" class="btn btn-primary btn-sm mt-4">Filter</button>
                            </div>
                        </div>
                    </form>
                    <table class="table small dtTransReport" id="dtTransReport">
                        <caption id="dateRange">
                            <span class="small">User: {{userData.UserName}} / {{userData.Email}} / {{DateTime}}</span>
                        </caption>
                        <thead>
                            <tr>
                                <th>AccountID</th>
                                <th>RetailerName</th>
                                <th>Company</th>
                                <th>RetailerAddress</th>
                                <th>PublicationDate</th>
                                <th>TotalDistributionAmount</th>
                                <th>TotalReturnAmount</th>
                                <th>TotalConfirmedAmount</th>
                                <th>CreatedAt</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each transactionReport}}
                                <tr>
                                    <td>{{this.AccountID}}</td>
                                    <td>{{this.RetailerName}}</td>
                                    <td>{{this.Company}}</td>
                                    <td>{{this.RetailerAddress}}</td>
                                    <td>{{this.PublicationDate}}</td>
                                    <td>{{this.TotalDistributionAmount}}</td>
                                    <td>{{this.TotalReturnAmount}}</td>
                                    <td>{{this.TotalConfirmedAmount}}</td>
                                    <td>{{this.CreatedAt}}</td>
                                    <td>{{this.Status}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="6">Total</th>
                                <th>2</th>
                                <th>4</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{{> report/transactionScripts}}



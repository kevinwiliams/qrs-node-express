<!-- profile.hbs -->
<section class="section profile">
    <div class="row">
        <div class="col-xl-4">

            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                    <img src="/img/profile-pic.jpg" alt="Profile" class="rounded-circle">
                    <h2>{{profile.RetailerName}}</h2>
                    <h3>{{userData.UserRole}} - {{profile.AccountID}}</h3>
                    <div class="social-links mt-2 d-none">
                        <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                        </li>

                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">

                            <h5 class="card-title">Profile Details</h5>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label ">Full Name</div>
                                <div class="col-lg-9 col-md-8">{{profile.RetailerName}}</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Company</div>
                                <div class="col-lg-9 col-md-8">{{profile.Company}}</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Role</div>
                                <div class="col-lg-9 col-md-8">{{userData.UserRole}}</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Country</div>
                                <div class="col-lg-9 col-md-8">JM</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Address</div>
                                <div class="col-lg-9 col-md-8">{{profile.RetailerAddress}}</div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Phone</div>
                                    <div class="col-lg-9 col-md-8">&nbsp;{{profile.PhoneNumber}}</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Cell</div>
                                    <div class="col-lg-9 col-md-8">&nbsp;{{profile.CellNumber}}</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Email</div>
                                    <div class="col-lg-9 col-md-8">{{profile.EmailAddress}}</div>
                                </div>

                            </div>
                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                            <!-- Profile Edit Form -->
                            <form class="form-horizontal" action="/dashboard/profile" method="POST" role="form">
                                {{ csrfToken }}
                                {{#if errorMessage}}
                                    <p class="text-danger">{{ errorMessage }}</p>
                                {{/if}}

                                <div class="row mb-3 visually-hidden">
                                    <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                                    <div class="col-md-8 col-lg-9">
                                        <img src="/assets/img/profile-pic.jpg" alt="Profile">
                                        <div class="pt-2">
                                            <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
                                            <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" name="AccountID" value="{{ profile.AccountID }}">

                                <div class="row mb-3 px-3">
                                    <div class="form-check">
                                        <input id="NotifyEmail" type="checkbox" name="NotifyEmail" class="form-check-input" value="{{ profile.NotifyEmail }}"/>
                                        <label class="form-check-label" for="profile.NotifyEmail">
                                            Get notification emails for each return submitted
                                        </label>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <span class="align-middle pt-2">{{ profile.RetailerName }}</span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="company" class="col-md-4 col-lg-3 col-form-label">First Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="FirstName" type="text" name="FirstName" class="form-control" value="{{ profile.FirstName }}" />
                                        {{#if errors.profile.FirstName}}
                                            <p class="text-danger">{{ errors.profile.FirstName }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="company" class="col-md-4 col-lg-3 col-form-label">Last Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="LastName" type="text" name="LastName" class="form-control" value="{{ profile.LastName }}" />
                                        {{#if errors.profile.LastName}}
                                            <p class="text-danger">{{ errors.profile.LastName }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="company" class="col-md-4 col-lg-3 col-form-label">Company</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="Company" type="text" name="Company" class="form-control" value="{{ profile.Company }}" />
                                        {{#if errors.profile.Company}}
                                            <p class="text-danger">{{ errors.profile.Company }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="Address" class="col-md-4 col-lg-3 col-form-label">Address Line 1</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="AddressLine1" type="text" name="AddressLine1" class="form-control" value="{{ profile.AddressLine1 }}" />
                                        {{#if errors.RetailerAddress.AddressLine1}}
                                            <p class="text-danger">{{ errors.RetailerAddress.AddressLine1 }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="Address" class="col-md-4 col-lg-3 col-form-label">Address Line 2</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="AddressLine2" type="text" name="AddressLine2" class="form-control" value="{{ profile.AddressLine2 }}" />
                                        {{#if errors.RetailerAddress.AddressLine2}}
                                            <p class="text-danger">{{ errors.RetailerAddress.AddressLine2 }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="Address" class="col-md-4 col-lg-3 col-form-label">Town</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="CityTown" type="text" name="CityTown" class="form-control" value="{{ profile.CityTown }}" />
                                        {{#if errors.profile.CityTown}}
                                            <p class="text-danger">{{ errors.profile.CityTown }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="Address" class="col-md-4 col-lg-3 col-form-label">Parish</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="StateParish" type="text" name="StateParish" class="form-control" value="{{ profile.StateParish }}" />
                                        {{#if errors.profile.StateParish}}
                                            <p class="text-danger">{{ errors.profile.StateParish }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="PhoneNumber" type="text" name="PhoneNumber" class="form-control" value="{{ profile.PhoneNumber }}" />
                                        {{#if errors.profile.PhoneNumber}}
                                            <p class="text-danger">{{ errors.profile.PhoneNumber }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Cell</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="CellNumber" type="text" name="CellNumber" class="form-control" value="{{ profile.CellNumber }}" />
                                        {{#if errors.profile.CellNumber}}
                                            <p class="text-danger">{{ errors.profile.CellNumber }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input id="EmailAddress" type="email" name="EmailAddress" class="form-control" value="{{ profile.EmailAddress }}" />
                                        {{#if errors.profile.EmailAddress}}
                                            <p class="text-danger">{{ errors.profile.EmailAddress }}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                <!-- Add more form fields here as needed -->

                                <hr />
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </form><!-- End Profile Edit Form -->

                        </div>


                                

                            </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

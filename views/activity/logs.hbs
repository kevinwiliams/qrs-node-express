<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Activity Logs</h5>
                    <a href="#" onclick="history.back();" class="btn btn-secondary"><i class="bi bi-box-arrow-in-left"></i> Back</a>
                    <table class="table table-hover table-striped small dtActLogs">
                        <thead>
                            <tr>
                                <th>Account ID</th>
                                <th>IP Address</th>
                                <th>User Name</th>
                                <th>Email Address</th>
                                <th>Publication Date</th>
                                <th>Distribution Amount</th>
                                <th>Return Amount</th>
                                <th>Status</th>
                                <th>Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each qRSActivityLogs}}
                                <tr>
                                    <td>{{AccountID}}</td>
                                    <td>{{IPAddress}}</td>
                                    <td>{{UserName}}</td>
                                    <td>{{EmailAddress}}</td>
                                    <td>{{formatListDate PublicationDate}}</td>
                                    <td>{{DistributionAmount}}</td>
                                    <td>{{ReturnAmount}}</td>
                                    <td>
                                        <span class="badge {{#if (eq Status "Closed")}}bg-danger{{else}}bg-success{{/if}}">
                                            {{Status}}
                                        </span>
                                    </td>
                                    <td>{{CreatedAt}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/js/jquery-3.7.1.js"></script>

<script>
    $(document).ready(function () {
        $('.dtActLogs').DataTable({
            "lengthChange": false,
            "pageLength": 30
        });
    });
</script>

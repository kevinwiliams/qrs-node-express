<div class="modal fade" id="disputeDrawModal" name="disputeDrawModal" tabindex="-1" role="dialog" aria-labelledby="disputeDrawModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="disputeDrawModalLabel">Dispute Draw: <span id="pubDateModal"></span></h5>
                <button type="button" class="btn-close btn-lg" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="disputeForm" name="disputeForm" role="form" method="POST" class="g-3 needs-validation" data-request-url="{{submitDisputeUrl}}">
                    <div class="form-group m-2">
                        Draw: <span class="showDrawCnt"></span>
                        <input type="hidden" class="form-control" id="disputePublicationDate" name="disputePublicationDate">
                        <input type="hidden" class="form-control" id="disputeDrawAmount" name="disputeDrawAmount">
                        <input type="hidden" class="form-control" id="accountId" name="accountId" value="{{AccountId}}">
                        <input type="hidden" class="form-control" id="userRole" name="userRole" value="{{userData.UserRole}}">
                        <input type="hidden" class="form-control" id="loggedEmail" name="loggedEmail" value="{{userData.Email}}">
                    </div>
                    <div class="form-group m-2">
                        <label for="disputeAmount">Amount Received</label>
                        <input type="number" class="form-control" id="disputeAmount" name="disputeAmount" required>
                    </div>
                    <div class="form-group m-2">
                        <label for="retailerNote">Message (optional)</label>
                        <textarea class="form-control" id="retailerNote" rows="3" name="retailerNote"></textarea>
                    </div>
                    <div class="row p-2 mb-3">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-sm btn-primary m-2 mb-0" id="sendBtn" name="sendBtn">Submit Dispute</button>
                        </div>
                    </div>
                </form>
                <div class="modal-footer">
                    <a href="#" class="small" data-bs-target="#returnDataModal" data-bs-toggle="modal" data-bs-dismiss="modal">Back to Returns</a>
                </div>
            </div>
        </div>
    </div>
{{> distribution/disputeScripts}}
</div>

